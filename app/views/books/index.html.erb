<div class="container">
  <div class="row">
    <%= render 'books/error', book: @book %>
    <div class="col-xs-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-xs-9">
      <table class="table book-index">
        <h2>Books</h2>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr id="favorite_<%= book.id %>">
              <%= render "favorites/favorite", book: book %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
